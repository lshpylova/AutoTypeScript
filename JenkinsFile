pipeline {
    agent any 
    stages {
        stage('Build') {            
            steps {
                img = 'node:18-alpine'
                docker.image("$(img)").run('-d  -p 80:80')
                sh '''
                ls -la
                node --version
                npm --version
                npm ci
                npm run build
                ls -la
                ''' 
            }
        }
    }
}